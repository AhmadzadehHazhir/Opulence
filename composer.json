{
    "name": "opulence/opulence",
    "description": "The Opulence PHP framework",
    "keywords": [
        "PHP",
        "full stack",
        "template",
        "mvc",
        "database",
        "orm",
        "console",
        "apex",
        "framework"
    ],
    "authors": [
        {
            "name": "David Young",
            "email": "dave@opulencephp.com",
            "role": "Architect"
        }
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Opulence\\Authentication\\": "src/Authentication/src",
            "Opulence\\Authorization\\": "src/Authorization/src",
            "Opulence\\Cache\\": "src/Cache/src",
            "Opulence\\Cryptography\\": "src/Cryptography/src",
            "Opulence\\Databases\\": "src/Databases/src",
            "Opulence\\Framework\\": "src/Framework/src",
            "Opulence\\Orm\\": "src/Orm/src",
            "Opulence\\QueryBuilders\\": "src/QueryBuilders/src",
            "Opulence\\Validation\\": "src/Validation/src",
            "Opulence\\Views\\": "src/Views/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Opulence\\Authentication\\Tests\\": "src/Authentication/tests",
            "Opulence\\Authorization\\Tests\\": "src/Authorization/tests",
            "Opulence\\Cache\\Tests\\": "src/Cache/tests",
            "Opulence\\Cryptography\\Tests\\": "src/Cryptography/tests",
            "Opulence\\Databases\\Tests\\": "src/Databases/tests",
            "Opulence\\Framework\\Tests\\": "src/Framework/tests",
            "Opulence\\Orm\\Tests\\": "src/Orm/tests",
            "Opulence\\QueryBuilders\\Tests\\": "src/QueryBuilders/tests",
            "Opulence\\Validation\\Tests\\": "src/Validation/tests",
            "Opulence\\Views\\Tests\\": "src/Views/tests"
        }
    },
    "require": {
        "aphiria/collections": "1.0.*@dev",
        "aphiria/console": "1.0.*@dev",
        "aphiria/dependency-injection": "1.0.*@dev",
        "aphiria/io": "1.0.*@dev",
        "aphiria/middleware": "1.0.*@dev",
        "aphiria/net": "1.0.*@dev",
        "ext-fileinfo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-memcached": "*",
        "ext-openssl": "*",
        "ext-pdo": "*",
        "ext-redis": "*",
        "jeremeamia/superclosure": "~2.2",
        "php": "^7.4",
        "psr/log": "~1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "~2.14",
        "phpunit/phpunit": "~8.0"
    },
    "replace": {
        "opulence/authentication": "self.version",
        "opulence/authorization": "self.version",
        "opulence/cache": "self.version",
        "opulence/cryptography": "self.version",
        "opulence/framework": "self.version",
        "opulence/orm": "self.version",
        "opulence/querybuilders": "self.version",
        "opulence/validation": "self.version",
        "opulence/views": "self.version"
    },
    "scripts": {
        "lint-check": "php-cs-fixer fix --config=.php_cs -v --diff --dry-run",
        "lint-fix": "php-cs-fixer fix --config=.php_cs -v --diff"
    },
    "extra": {
        "branch-alias": {
            "dev-2.0": "2.0.x-dev"
        }
    },
    "minimum-stability": "dev"
}
